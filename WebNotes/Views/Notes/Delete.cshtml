@model WebNotes.Models.Note

@{
    ViewData["Title"] = "Delete";
}



<h3 style="color:red">Are you sure you want to delete this note?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoteContent)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary ml-2" asp-action="Edit" asp-route-id="@Model.id">Back</a>
    </form>
</div>
