@model WebNotes.Models.PublicNote

@{
    ViewData["Title"] = "ViewPublicNote";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Sender</label>
            <input asp-for="UserName" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group">
            <label asp-for="Created" class="control-label"></label>
            <input asp-for="Created" class="form-control" disabled="disabled" />
        </div>
